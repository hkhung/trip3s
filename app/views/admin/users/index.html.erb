<section id="main-content">
<div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              <h2>Danh Sách Người Dùng</h2>
                              <button type="button" class="btn btn-success pull-right"><%= link_to '+ Thêm mới người dùng', new_admin_user_path %></button>
                          </header>
                          
                          <table class="table table-striped table-advance table-hover">
                           <tbody>
                              <tr>
                                 <th><i class="icon_profile"></i> Tên Người Dùng</th>
                                 <th><i class="icon_calendar"></i> Username</th>
                                 <th><i class="icon_cogs"></i> Email</th>
                                 <th><i class="icon_cogs"></i> Đăng Ký Qua</th>
                              </tr>
                              <% @users.each do |user| %>
                              <tr>
                                  <td><%= user.user_display %></td>
                                  <td><%= user.user_name %></td>
                                  <td><%= user.user_email %></td>
                                  <td><%= user.user_activation %></td>
                                   <td>
                                  <div class="btn-group">
                                      <%= link_to 'Xem', [:admin, user] %>
                                      ||<%= link_to 'Sửa', edit_admin_user_path(user) %>
                                      ||<%= link_to 'Xóa', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' } %>
                                  </div>
                                  </td>
                                </tr>
                              <% end %>
                           </tbody>
                        </table>
                        <%= will_paginate @plans %>
                      </section>
 
<br>
</section>